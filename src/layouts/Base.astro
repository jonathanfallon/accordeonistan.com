---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_SHORT_TITLE } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_SHORT_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 bg-white">
      <div class="mx-auto max-w-4xl">
				<Header title={SITE_SHORT_TITLE} />
        <main>
			    <slot />
        </main>
				<Footer />
			</div>
    </div>
	</body>
</html>
